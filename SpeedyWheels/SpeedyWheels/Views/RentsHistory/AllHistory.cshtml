@model IEnumerable<SpeedyWheels.ViewModels.HistoryViewModel>

@{
    ViewData["Title"] = "Historia";
}
<div class="text-center">
    @foreach (var rent in Model)
    {
        <div style="border: 2px solid; background-color: lightsteelblue; box-shadow: inset; margin: 5pt;" class="row">
            <div class="col-md-6" style="">
                <img src="@rent.ImgUrl" width="600pt" height="500pt" style="margin: 10pt; vertical-align: central; " class="card-img"></img>
            </div>
            <div class="col-md-6" style="">
                <h1 style="float: right; padding: 5pt;"> @rent.Brand @rent.Name</h1>
                <p style="float: right; clear: both; padding: 5pt;">Rok produkcji: @rent.ProductionYear</p>
                <p style="float: right; clear: both; padding: 5pt;">Data wypożyczenia: @rent.RentDate</p>
                <p style="float: right; clear: both; padding: 5pt;">Koszt za godzinę: @rent.CostPerHour</p>
                <p style="float: right; clear: both; padding: 5pt;">Ilość godzin: @rent.HourCount</p>
                <h3 style="float: right; clear: both; padding: 5pt;">@rent.Cost zł</h3>

                <a asp-action="Details" asp-route-id="@rent.CarId">Datale Pojazdu</a>

                @if (!rent.IsRated)
                {
                    <form asp-controller="RentsHistory" asp-action="Rating" method="post" style="float: right; clear: both; padding: 5pt;">
                        <input style="visibility: hidden" type="number" name="rentId" readonly value="@rent.Id"></input>
                        <input style="visibility: hidden" type="number" name="carId" readonly value="@rent.CarId"></input>
                        <input style="visibility: hidden" type="number" name="clientId" readonly value="@rent.ClientId"></input>
                        <label style="float: right; clear: both; padding: 5pt;">Ocena (1-5) :<input type="number" required name="rate"></input></label>
                        <label style="float: right; clear: both; padding: 5pt;">Komentarz :<input type="text" required name="comment"></input></label>
                        <input class="btn btn-primary" style="float: right; clear: both; padding: 5pt;" type="submit" value="Oceń"></input>
                    </form>
                }


            </div>
        </div>
    }
</div>