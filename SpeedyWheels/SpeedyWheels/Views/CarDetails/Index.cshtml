@model IEnumerable<SpeedyWheels.ViewModels.CarDetailsViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @foreach (var car in Model)
    {
        <div style="border: 2px solid; background-color: antiquewhite; box-shadow: inset; margin: 5pt;" class="row">
            <div class="col-md-6" style="">
                <img src="@car.ImageAddress" width="600pt" height="500pt" style="margin: 10pt; vertical-align: central; " class="card-img"></img>
            </div>
            <div class="col-md-6" style="">
                <h1 style="float: right; padding: 5pt;"> @car.Brand @car.Name</h1>
                <p style="float: right; clear: both; padding: 5pt;">Rok produkcji: @car.ProductionYear</p>
                <p style="float: right; clear: both; padding: 5pt;">Ilość drzwi: @car.DoorCount</p>
                <p style="float: right; clear: both; padding: 5pt;">Rodzaj skrzyni biegów: @car.GearBox</p>
                <p style="float: right; clear: both; padding: 5pt;">Przebieg: @car.Mileage</p>
                <p style="float: right; clear: both; padding: 5pt;">Numer rejestracyjny: @car.RegistrationNumber</p>
                <p style="float: right; clear: both; padding: 5pt;">Ilość miejsc: @car.SeatsCount</p>
                <h3 style="float: right; clear: both; padding: 5pt;">@car.CostPerHour zł/h</h3>

                <form style="float: right; clear: both; padding: 5pt; method="post">
                    <label style="float: right; clear: both; padding: 5pt;">Od :<input type="date"></input></label>
                    <label style="float: right; clear: both; padding: 5pt;">Do :<input type="date"></input></label>
                    <input style ="float: right; clear: both; padding: 5pt;" type="submit" value="Zarezerwuj"></input>
                </form>
                
            </div>
        </div>
    }
</div>